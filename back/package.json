{
  "name": "puzzle-back",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run clean && npm run assets && esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/puzzle/index.js",
    "serve": "npm run clean && npm run assets && tsc-watch --onSuccess \"node ./dist/puzzle/index.js\" --noClear",
    "lint": "eslint \"**/*.ts\"",
    "clean": "rimraf dist/puzzle",
    "assets": "copyfiles .env dist/puzzle"
  },
  "private": true,
  "dependencies": {
    "cookie": "^0.6.0",
    "dotenv": "^16.4.5",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.5"
  },
  "devDependencies": {
    "@eslint/json": "^0.14.0",
    "@stylistic/eslint-plugin": "^5.6.1",
    "@types/cookie": "^0.6.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.2",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.21.5",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import-x": "^4.16.1",
    "rimraf": "^5.0.7",
    "tsc-watch": "^6.2.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.47.0"
  }
}
