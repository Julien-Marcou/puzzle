{
  "name": "puzzle-back",
  "version": "0.0.0",
  "scripts": {
    "build": "npm run clean && npm run assets && esbuild src/index.ts --bundle --minify --platform=node --outfile=dist/puzzle/index.js",
    "serve": "npm run clean && npm run assets && tsc-watch --onSuccess \"node ./dist/puzzle/index.js\" --noClear",
    "lint": "eslint \"**/*.ts\"",
    "clean": "rimraf dist/puzzle",
    "assets": "copyfiles .env dist/puzzle"
  },
  "private": true,
  "dependencies": {
    "cookie": "^0.5.0",
    "dotenv": "^16.0.3",
    "inversify": "^6.0.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "socket.io": "^4.6.1"
  },
  "devDependencies": {
    "@types/cookie": "^0.5.1",
    "@types/jest": "^29.5.1",
    "@types/node": "^18.16.12",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "copyfiles": "^2.4.1",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsdoc": "^44.2.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.5.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.0",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.0.4"
  }
}
